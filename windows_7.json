{
  "builders": [
    {
      "type": "vmware-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "http_directory": ".",
      "headless": true,
      "boot_wait": "2m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "30m",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "windows7-64",
      "tools_upload_flavor": "windows",
      "disk_size": 61440,
      "vnc_port_min": 5900,
      "vnc_port_max": 5980,
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/install-openssh.ps1"
      ],
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900",
        "memsize": "2048",
        "numvcpus": "2",
        "scsi0.virtualDev": "lsisas1068"
      }
    },
    {
      "type": "virtualbox-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "http_directory": ".",
      "headless": true,
      "boot_wait": "2m",
      "post_shutdown_delay": "30s",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "30m",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "Windows7_64",
      "disk_size": 61440,
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/install-openssh.ps1"
      ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    },
    {
      "type": "parallels-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "http_directory": ".",
      "boot_wait": "2m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "30m",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "win-7",
      "parallels_tools_flavor": "win",
      "disk_size": 61440,
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/install-openssh.ps1"
      ],
      "prlctl": [
        [
          "set", "{{.Name}}",
          "--memsize", "2048"
        ],
        [
          "set", "{{.Name}}",
          "--cpus", "2"
        ],
        [
          "set", "{{.Name}}",
          "--winsystray-in-macmenu", "off"
        ],
        [
          "set", "{{.Name}}",
          "--startup-view", "window"
        ],
        [
          "set", "{{.Name}}",
          "--efi-boot", "off"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": [
        "Set-Content -Path \"C:\\packer_server.txt\" -Value \"http://${env:PACKER_HTTP_ADDR}\"",
        "Set-Content -Path \"C:\\packer_build.txt\" -Value \"${env:PACKER_BUILD_TYPE}\""
      ],
      "environment_vars": []
    },
    {
      "type": "windows-shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat w61-x64",
      "script": "./scripts/install-wsus-pack.bat"
    },
    {
      "type": "windows-restart",
      "restart_command": "cmd /C C:/wsus/cmd/DoUpdate.cmd /updatecpp /instdotnet4 /instwmf /skipieinst /skipdefs /autoreboot ; cmd /c start cmd /c taskkill /f /im sshd.exe",
      "restart_timeout": "2h"
    },
    {
      "type": "windows-shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "script": "./scripts/chocolatey.bat"
    },
    {
      "type": "windows-restart",
      "restart_command": "shutdown /r /f /t 0 ; cmd /c start cmd /c taskkill /f /im sshd.exe",
      "restart_timeout": "40m"
    },
    {
      "type": "powershell",
      "script": "./scripts/dis-updates.ps1"
    },
    {
      "type": "windows-shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
        "./scripts/vm-guest-tools.bat",
        "./scripts/enable-rdp.bat",
        "./scripts/disable-auto-logon.bat",
        "./scripts/compact.bat"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "windows_7_{{.Provider}}.box",
      "vagrantfile_template": "vagrantfile-windows_7.template"
    }
  ],
  "variables": {
    "iso_url": "http://care.dlservice.microsoft.com/dl/download/evalx/win7/x64/EN/7600.16385.090713-1255_x64fre_enterprise_en-us_EVAL_Eval_Enterprise-GRMCENXEVAL_EN_DVD.iso",
    "iso_checksum_type": "md5",
    "iso_checksum": "1d0d239a252cb53e466d39e752b17c28",
    "autounattend": "./answer_files/7/Autounattend.xml"
  }
}
